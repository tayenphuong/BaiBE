 @model TaYenPhuong_BE.Models.ViewModel.ProductSearchVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        .search-container, .oder-container{
            padding-top:20px;
            display:flex;
            justify-content:center;
            align-items:center;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Products", FormMethod.Get)) 
     {
        <div class="form-group search-container ">
            @Html.TextBoxFor(m => m.SearchTerm, new
            {
                 @class = "form-control",
                placeholder = " Nhập tên, mô tả hoặc loại sản phẩm "
            })

            @*khung khoang gia tri *@
            @Html.TextAreaFor(m => m.MinPrice, new
            {
                @class = "form-control",
              placeholder = " Nhập giá tối thiểu",
                 type = "number"

           })
            @Html.TextAreaFor(m => m.MinPrice, new
            {
                 @class = "form-control",
              placeholder = " Nhập giá tối thiểu",
              type = "number"

            })
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @*@Html.ActionLink("Tìm kiếm", "PVListProduct", null, new { @class = "btn btn-primary " })*@

        </div>

        <div class="form-group oder-container">
            Sắp xếp theo:
            @Html.ActionLink("Tên tăng dần","Index","Products",
                new { sortOder = "name_asc",
                searchTerm = Model.SearchTerm,
                minPrice = Model.MinPrice,
                maxPrice = Model.MaxPrice},
                null ) |

                        @Html.ActionLink("Tên giảm dần","Index","Products",
                new { sortOder = "name_desc",
                searchTerm = Model.SearchTerm,
                minPrice = Model.MinPrice,
                maxPrice = Model.MaxPrice},
                null ) |
                        @Html.ActionLink("Giá tăng dần","Index","Products",
                new { sortOder = "price_asc",
                searchTerm = Model.SearchTerm,
                minPrice = Model.MinPrice,
                maxPrice = Model.MaxPrice},
                null ) |
                        @Html.ActionLink("Giá giảm dần","Index","Products",
                new { sortOder = "price_desc",
                searchTerm = Model.SearchTerm,
                minPrice = Model.MinPrice,
                maxPrice = Model.MaxPrice},
                null ) 
        </div>


        @Html.Partial("PVListProduct",Model)
     }
</body>
</html>



